#version 330

in vec2 gs_texCoord;
in float gs_thickness;
in vec4 gs_color;
uniform sampler2D u_characterTex;

out vec4 fragColor;

void main()
{
	// Texture sample (bitmap font)
	float height = texture( u_characterTex, vec2(gs_texCoord.x, 1-gs_texCoord.y) ).x;

	fragColor = gs_color * (height<gs_thickness ? 0 : 1);
}
